{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src"]
}
